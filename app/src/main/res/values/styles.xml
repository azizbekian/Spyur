<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SearchWindowAnimations">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/fade_out_rapidly</item>
    </style>

    <style name="SearchViewTheme" parent="AppDarkOverlay">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.Spyur.SearchView</item>
    </style>

    <style name="Widget.Spyur.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@null</item>
        <item name="android:searchHintIcon" tools:ignore="NewApi">@null</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.Spyur" parent="android:Widget"/>

    <style name="Widget.Spyur.Toolbar">
        <item name="android:titleTextAppearance">
            @android:style/TextAppearance.Material.Widget.ActionBar.Title
        </item>
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:elevation">@dimen/z_app_bar</item>
        <item name="android:theme">@style/AppDarkOverlay</item>
        <item name="android:layout_height">?android:actionBarSize</item>
    </style>

    <style name="Widget.Spyur.HomeToolbar" parent="Widget.Spyur.Toolbar"/>

    <style name="TextAppearance.ToolbarTitleSmallCaps"
           parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/purpleA200</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="Widget.Spyur.EmptyText">
        <item name="android:textAppearance">@style/TextAppearance.DialogContent</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="TextAppearance.DialogContent"
           parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="SpyurCard" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/z_card</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SearchCard" parent="SpyurCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller</item>
        <item name="android:layout_marginRight">@dimen/spacing_smaller</item>
    </style>

    <style name="LogoCard" parent="SpyurCard">
        <item name="android:layout_width">@dimen/logo_width_normal</item>
        <item name="android:layout_height">@dimen/logo_height_normal</item>
    </style>

    <style name="ListingCard" parent="SpyurCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smaller</item>
        <item name="android:layout_marginRight">@dimen/spacing_smaller</item>
    </style>

    <style name="ListingCard.MainInfo">
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
    </style>

    <style name="ListingCard.Images"/>

    <style name="ListingCard.Video"/>

    <style name="AppBarLayout.Listing"/>

    <style name="ToolbarPopup.Listing"/>

    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
    </style>

    <style name="CardContent.Listing">
        <item name="android:paddingTop">@dimen/card_padding</item>
        <item name="android:paddingBottom">@dimen/card_padding</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Material"/>

    <style name="Text.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="Text.Content" parent="@android:style/TextAppearance.Material.Body1"/>

    <style name="Text.NoInfo" parent="@android:style/TextAppearance.Material.Headline">
        <item name="android:textColor">@color/background_super_dark</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.SearchRow" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textStyle">bold</item>
    </style>

</resources>